<div class="container mt-5 pt-5">
  <div class="mt-5 ">
    <h1 class="text-center">  Post a Job </h1>
  </div>
  <%= form_tag("/job", method: "post", class: "form col-sm-6 mx-auto mb-5" ) do %>
    <input class="form-control mt-3" type="text" required name="title" placeholder="Title">
    <input class="form-control mt-3" type="number" required name="amount" placeholder="cost">
    <%# <input class="form-control mt-3" type="text" name="location" placeholder="location"> %>
    <div class="mt-3">
    <%# <span class="btn btn-secondary"> Get Location </span> %>
      <div class="gmap_canvas mx-auto mt-3">
        <iframe height="300" width="100%" id="gmap_canvas" src="https://maps.google.com/maps?q=8&&t=k&z=19&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
        </iframe>
      </div>
    </div>
    <input class="form-control mt-3 name" required name="location" placeholder="location" style="opacity:0">
    <textarea class="form-control mt-3" required name="description" placeholder="Description"> 
    </textarea>
    <input class="form-control mt-3 btn" type="submit" value="Post">
  <% end %>

  
</div>


<%= javascript_pack_tag 'job' %>

